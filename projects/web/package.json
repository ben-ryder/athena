{
  "name": "@ben-ryder/athena-web",
  "description": "A local-first web app for notes, tasks, journaling, habit tracking and reminders.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "vite",
    "dev": "vite",
    "tsc": "tsc",
    "build": "npm run tsc && vite build",
    "preview": "vite preview",
    "sb:start": "storybook dev -p 6006 --no-open",
    "sb:build": "storybook build -o build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest '.*.unit.test.ts' --detectOpenHandles --forceExit --runInBand --detectOpenHandles --forceExit",
    "test:e2e": "cypress run --e2e -q",
    "cy:start": "cypress open -b firefox",
    "cy:start:unit": "cypress open --component -b firefox",
    "cy:start:e2e": "cypress open --e2e -b firefox",
    "code:lint": "npx eslint .",
    "code:format": "npx prettier . --write"
  },
  "dependencies": {
    "@ben-ryder/jigsaw": "^0.19.1",
    "@ben-ryder/jigsaw-react": "^0.20.1",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/language-data": "^6.4.0",
    "@codemirror/view": "^6.23.1",
    "@hookform/resolvers": "^3.3.4",
    "@localful/common": "^0.2.0",
    "@uiw/codemirror-extensions-basic-setup": "^4.21.21",
    "@uiw/codemirror-extensions-hyper-link": "^4.21.21",
    "@uiw/codemirror-themes": "^4.21.21",
    "@uiw/react-codemirror": "^4.21.21",
    "classnames": "^2.5.1",
    "codemirror": "^6.0.1",
    "easy-web-crypto": "^1.4.0",
    "idb": "^8.0.0",
    "lucide-react": "^0.372.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^2.0.4",
    "react-hook-form": "^7.49.3",
    "react-router-dom": "^6.21.3",
    "rxjs": "^7.8.1",
    "sass": "^1.70.0",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "vite-tsconfig-paths": "^4.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@storybook/addon-docs": "^7.6.10",
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/addons": "^7.6.10",
    "@storybook/blocks": "^7.6.10",
    "@storybook/react": "^7.6.10",
    "@storybook/react-vite": "^7.6.10",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/testing-react": "^2.0.0",
    "@storybook/theming": "^7.6.10",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vitejs/plugin-react": "^4.2.1",
    "cypress": "^13.6.3",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "3.2.4",
    "storybook": "^7.6.10",
    "ts-jest": "^29.1.2",
